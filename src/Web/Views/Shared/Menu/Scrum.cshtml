@using Web.Extension
@using Platform.Enum

<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        Scrum <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
        <li><a asp-controller="Scrum" asp-action="Index">Sprints</a></li>
        @if (this.GetUserType() == UserType.User || this.GetUserType() == UserType.Leader)
        {
            <li><a asp-controller="Scrum" asp-action="Sprint">Add Sprint</a></li>
        }
    </ul>
</li>